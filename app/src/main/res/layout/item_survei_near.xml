<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="#0FFFFFFF"
    app:cardCornerRadius="8dp"
    android:layout_margin="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:background="@color/mustard4"
        app:cardCornerRadius="10dp"
        android:backgroundTint="@color/mustard4"
        android:orientation="horizontal">

        <!-- Gambar -->
        <ImageView
            android:id="@+id/iv_survei_list"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_margin="8dp"
            android:scaleType="centerCrop"
            android:src="@drawable/survey"
            android:outlineProvider="background"
            android:clipToOutline="true"
            android:background="@drawable/rounded_rectangle" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="8dp">

            <!-- Judul -->
            <TextView
                android:id="@+id/tv_title_survei"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semibold"
                android:text="Survei Kesehatan Warga"
                android:textSize="16sp"
                android:textColor="@color/black" />

            <!-- Tanggal -->
            <TextView
                android:id="@+id/tv_deadline_survei"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="Tenggat: 24/02/2024"
                android:textColor="@android:color/black"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tv_keterangan_survei"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/poppins_medium"
                android:text="Survey ini bertujuan untuk mengumpulkan data tentang kesehatan masyarakat RT X"
                android:textColor="@android:color/black"
                android:textSize="10sp" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
